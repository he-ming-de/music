/* pages/play/play.wxss */
.container {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .5);
}

.containerimg {
  width: 100%;
  height: 100%;
  opacity: 0.2;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
}
.dt {
  color: #fff;
}
.imagecc {
  width: 520rpx;
}
.img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  border: 80rpx solid rgb(0, 0, 0);
  animation: go 5s linear infinite;
  animation-play-state: running;
}
.active {
  animation-play-state: paused;
}
@keyframes go {
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}

