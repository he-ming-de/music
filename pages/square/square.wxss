/* pages/square/square.wxss */

page {
  background: #fff;
}

.swiperClass {
  margin: 0;
}

.slide-image {
  width: 100%;
  height: 300rpx;
  border-radius: 10px;
  position: relative;
  background: pink;
  margin-top: 20rpx;
}

swiper-item image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

swiper-item image.quiet {
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}

.top {
  width: 100%;
  height: 460rpx;
  background: rgba(246, 245, 245, 1);
  padding-top: 10rpx;
  display: flex;
  justify-content: center;
}

.item {
  background: pink;
}





.img {
  width: 260rpx;
  height: 280rpx;
  border-radius: 20rpx;
}

.imgs {
  display: flex;
  justify-content: center;
  height: 280rpx;
}

.item9 {
  padding: 0 40rpx;
  margin-top: 60rpx;
}

swiper {
  display: block;
  height: 220px;
}

.font {
  margin: 20rpx 0;
  width: 260rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.fonts {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.images {
  width: 200rpx;
  height: 200rpx;
}

.subfont {
  margin-top: 10rpx;
  width: 200rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item1 {
