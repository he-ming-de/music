/* pages/single/single.wxss */
.item {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.item1 {
  display: flex;
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.item3 {
  margin-right: 40rpx;
  font-size: 40rpx;
  color: #ccc;
}

.item4 {
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.item5 {
  margin: 0 10rpx;
}

.item6 {
  padding: 0 40rpx;
}

.img {
  width: 100%;
  height: 400rpx;
}

.image {
  width: 100%;
  height: 400rpx;
  margin-top: 40rpx;
}